export DOCKER_POSTGRES_VERSION=17
export DOCKER_POSTGRES_PORT=5432

alias dpg_build="~/docker/postgres/build.sh"
alias dpg_start="~/docker/postgres/start.sh"
alias dpg_stop="~/docker/postgres/stop.sh"
alias dpg_stop_all="~/docker/postgres/stop_all.sh"
alias dpg_set_version=". ~/docker/postgres/set_version.sh"
alias dpg_running="~/docker/postgres/running.sh"
alias dpg_versions="~/docker/postgres/versions.sh"

alias createdb="~/docker/postgres/run.sh 'createdb' -i"
alias createuser="~/docker/postgres/run.sh 'createuser' -i"
alias dropdb="~/docker/postgres/run.sh 'dropdb' -i"
alias pg_dump="~/docker/postgres/run.sh 'pg_dump' -i"
alias pg_restore="~/docker/postgres/run.sh 'pg_restore' -i"
alias psql="~/docker/postgres/run.sh 'psql' -it"